<h1>Posts#show</h1>
<p>Find me in app/views/posts/show.html.erb</p>
<div class="map-page">
    <div id="map"></div>
</div>


<script>
$(window).ready(function(){
  var handler = Gmaps.build('Google');
  handler.buildMap({ internal: {id: 'map'}}, function(){
    var markers = handler.addMarkers(<%=raw @hash.to_json %>);
    ([
      { lat: 30.27, lng: -97.74},
      { lat: 32.78, lng: -96.80},
      { lat: 30.36, lng: -103.66},
      { lat: 29.76, lng: -95.37}
    ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
})
</script>

<div class="postwrapper">
  <li>
<h1><%= @post.title %></h1>


<div class="imagebox">
  <div class="tinybox">
    <div class="image">
      <a>
      <%= image_tag attachment_url @post, :photo, :fill, 300,300 %>
      </a>
    </div>  <!-- close the image div for image -->
  </div> <!-- close tinybox tag -->

  <div class="timelatlong">
    <div class="time">
      <p> <%= @post.photo_date  %> </p>
    </div> <!-- close time -->

    <div class="lat">
      <%= @post.latitude %>
    </div> <!-- close lat -->

    <div class="long">
      <%= @post.longitude %>
    </div> <!-- close long -->

  </div> <!-- close details of time lat long -->
  </div> <!-- close the imagebox -->
</li>
</div>

